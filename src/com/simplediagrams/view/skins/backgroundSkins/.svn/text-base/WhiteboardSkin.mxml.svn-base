<?xml version="1.0" encoding="utf-8"?>
<!-- http://blog.flexexamples.com/2009/03/23/setting-a-repeating-background-image-on-an-fxapplication-in-flex-gumbo/ -->
<s:Skin name="WhiteboardSkin"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        alpha.disabled="0.5"
         mouseEnabled="false" >
        
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
 
    <fx:Metadata>
    <![CDATA[ 
        [HostComponent("com.simplediagrams.view.Background")]
    ]]>
    </fx:Metadata> 
 
    <!-- fill -->
    <s:Rect id="backgroundRect" left="0" right="0" top="0" bottom="0"  >
        <s:fill>
            <s:BitmapFill source="@Embed('assets/img/backgrounds/whiteboard_tile.png')" />
        </s:fill>
    </s:Rect>
 
 
</s:Skin>